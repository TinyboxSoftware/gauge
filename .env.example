# Railway API Credentials
# Get these from your Railway account settings
RAILWAY_API_TOKEN=your_api_token_here
RAILWAY_CUSTOMER_ID=your_customer_id_uuid
RAILWAY_WORKSPACE_ID=your_workspace_id_uuid

# Database Configuration
# Provided automatically by Railway when adding a Postgres database
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/gauge

# Grafana Configuration
# Set your desired admin username
GF_SECURITY_ADMIN_USER=admin
# The password will be auto-generated by Railway if not set
# GF_SECURITY_ADMIN_PASSWORD=admin

# Grafana Internal Connection (Automated in Railway)
# These are used by Grafana to connect to the database
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=postgres
DATABASE_NAME=gauge

# Service Versions
VERSION=12.3.1
